\newcommand\nduAddToSum@helper[5]{%
	% #1 = unit name
	% #2 = sum name
	% #3 = current segment
	% #4 = above segment
	% #5 = value to add
	\ndu@if@segment@at@least{#1}{#3}{%
		\IfValueT{#5}{\ifblank{#5}{}{%
			\pgfmathparse{ int(\csuse{ndu@sums@#2@#3} + #5) }%
			\csxdef{ndu@sums@#2@#3}{\pgfmathresult}%
		}}%
		\ifblank{#4}{%
			\csxdef{ndu@sums@#2@#3}{\csuse{ndu@sums@#2@#3}}%
		}{%
			\pgfmathparse{ int(\csuse{ndu@sums@#2@#4} + div(\csuse{ndu@sums@#2@#3}, \csuse{ndu@#1@segment #4@factor})) }%
			\csxdef{ndu@sums@#2@#4}{\pgfmathresult}%
			%
			\pgfmathparse{ int(mod(\csuse{ndu@sums@#2@#3}, \csuse{ndu@#1@segment #4@factor})) }%
			\csxdef{ndu@sums@#2@#3}{\pgfmathresult}%
		}%
	}%
}

\newcommand\nduAddToSum@internal[7]{%
	% #1 = unit name
	% #2 = sum name
	% #3-7 = values
	\ifblank{\csuse{ndu@sums@#2@0}}{\csxdef{ndu@sums@#2@0}{0}}{}%
	\ifblank{\csuse{ndu@sums@#2@1}}{\csxdef{ndu@sums@#2@1}{0}}{}%
	\ifblank{\csuse{ndu@sums@#2@2}}{\csxdef{ndu@sums@#2@2}{0}}{}%
	\ifblank{\csuse{ndu@sums@#2@3}}{\csxdef{ndu@sums@#2@3}{0}}{}%
	\ifblank{\csuse{ndu@sums@#2@4}}{\csxdef{ndu@sums@#2@4}{0}}{}%
	\nduAddToSum@helper{#1}{#2}{4}{3}{#7}%
	\nduAddToSum@helper{#1}{#2}{3}{2}{#6}%
	\nduAddToSum@helper{#1}{#2}{2}{1}{#5}%
	\nduAddToSum@helper{#1}{#2}{1}{0}{#4}%
	\nduAddToSum@helper{#1}{#2}{0}{}{#3}%
}

\NewDocumentCommand\nduAddToSum{ m O{} m > { \SplitArgument { 4 } { . } } m }{%
	\nduset{#1/.cd,#2}%
	\nduAddToSum@internal{#1}{#3}#4%
}

\NewDocumentCommand\nduFormatSum{ m O{} m }{%
	\begingroup%
	\nduset{#1/.cd,#2}%
	\nduFormatValue@helper{#1}{0}{\csuse{ndu@sums@#3@0}}%
	\nduFormatValue@helper{#1}{1}{\csuse{ndu@sums@#3@1}}%
	\nduFormatValue@helper{#1}{2}{\csuse{ndu@sums@#3@2}}%
	\nduFormatValue@helper{#1}{3}{\csuse{ndu@sums@#3@3}}%
	\nduFormatValue@helper{#1}{4}{\csuse{ndu@sums@#3@4}}%
	\ndu@helper@listjoin{\csuse{ndu@#1@unit@separator}}{\tmp}%
	\endgroup%
}

\NewDocumentCommand\nduAlignedSum{ m O{} m }{%
	\begingroup%
	\nduset{show=values,#1/.cd,#2}%
	\nduAlignedValue@helper{#1}{0}{\csuse{ndu@sums@#3@0}}%
	\nduAlignedValue@helper{#1}{1}{\csuse{ndu@sums@#3@1}}%
	\nduAlignedValue@helper{#1}{2}{\csuse{ndu@sums@#3@2}}%
	\nduAlignedValue@helper{#1}{3}{\csuse{ndu@sums@#3@3}}%
	\nduAlignedValue@helper{#1}{4}{\csuse{ndu@sums@#3@4}}%
	\endgroup%
}

