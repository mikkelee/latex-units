\newcommand\nduAddToSum@helper[5]{%
	% #1 = unit name
	% #2 = sum name
	% #3 = current level
	% #4 = above level
	% #5 = value to add
	\ndu@if@level@at@least{#1}{#3}{%
		\IfValueT{#5}{\ifblank{#5}{}{%
			\pgfmathparse{ int(\csuse{ndu@sums@#2@#3} + #5) }%
			\csxdef{ndu@sums@#2@#3}{\pgfmathresult}%
		}}%
		\ifblank{#4}{%
			\csxdef{ndu@sums@#2@#3}{\csuse{ndu@sums@#2@#3}}%
		}{%
			\pgfmathparse{ int(\csuse{ndu@sums@#2@#4} + div(\csuse{ndu@sums@#2@#3}, \csuse{ndu@#1@level #4@factor})) }%
			\csxdef{ndu@sums@#2@#4}{\pgfmathresult}%
			%
			\pgfmathparse{ int(mod(\csuse{ndu@sums@#2@#3}, \csuse{ndu@#1@level #4@factor})) }%
			\csxdef{ndu@sums@#2@#3}{\pgfmathresult}%
		}%
	}%
}

\newcommand\nduAddToSum@internal[7]{%
	% #1 = unit name
	% #2 = sum name
	% #3-7 = values
	\ifblank{\csuse{ndu@sums@#2@0}}{\csedef{ndu@sums@#2@0}{0}}{}%
	\ifblank{\csuse{ndu@sums@#2@1}}{\csedef{ndu@sums@#2@1}{0}}{}%
	\ifblank{\csuse{ndu@sums@#2@2}}{\csedef{ndu@sums@#2@2}{0}}{}%
	\ifblank{\csuse{ndu@sums@#2@3}}{\csedef{ndu@sums@#2@3}{0}}{}%
	\ifblank{\csuse{ndu@sums@#2@4}}{\csedef{ndu@sums@#2@4}{0}}{}%
	\nduAddToSum@helper{#1}{#2}{4}{3}{#7}%
	\nduAddToSum@helper{#1}{#2}{3}{2}{#6}%
	\nduAddToSum@helper{#1}{#2}{2}{1}{#5}%
	\nduAddToSum@helper{#1}{#2}{1}{0}{#4}%
}

\NewDocumentCommand\nduAddToSum{ m m O{} > { \SplitArgument { 4 } { . } } m }{%
	\nduset{#1/.cd,#3}%
	\nduAddToSum@internal{#1}{#2}#4%
}

\NewDocumentCommand\nduFormatSum{ m m O{} }{%
	\begingroup%
	\nduset{#1/.cd,#3}%
	\nduFormatValues@helper{#1}{0}{\csuse{ndu@sums@#2@0}}%
	\nduFormatValues@helper{#1}{1}{\csuse{ndu@sums@#2@1}}%
	\nduFormatValues@helper{#1}{2}{\csuse{ndu@sums@#2@2}}%
	\nduFormatValues@helper{#1}{3}{\csuse{ndu@sums@#2@3}}%
	\nduFormatValues@helper{#1}{4}{\csuse{ndu@sums@#2@4}}%
	\ndu@helper@listjoin{\csuse{ndu@#1@unit@separator}}{\tmp}%
	\endgroup%
}

\NewDocumentCommand\nduAlignedSum{ m m O{} }{%
	\begingroup%
	\nduset{show=values,#1/.cd,#3}%
	\nduAlignedValues@helper{#1}{0}{\csuse{ndu@sums@#2@0}}%
	\nduAlignedValues@helper{#1}{1}{\csuse{ndu@sums@#2@1}}%
	\nduAlignedValues@helper{#1}{2}{\csuse{ndu@sums@#2@2}}%
	\nduAlignedValues@helper{#1}{3}{\csuse{ndu@sums@#2@3}}%
	\nduAlignedValues@helper{#1}{4}{\csuse{ndu@sums@#2@4}}%
	\endgroup%
}

