\newcommand\nduFormatSegmentValue[3]{%
	% #1 = unit name
	% #2 = segment
	% #3 = value
	\begingroup%
	\edef\nduSymbol{\csuse{ndu@#1@display@segment #2@symbol}}%
	%\csshow{ndu@#1@display@segment #2@symbol}%
	%\show\nduSymbol%
	\ifshowunits\csuse{ndu@#1@display@segment #2@prefix}\fi%
	\ifshowvalues#3\fi%
	\ifshowunits\csuse{ndu@#1@display@segment #2@suffix}\fi%
	\endgroup%
}

\newcommand\ndu@helper@listjoin[2]{%
	\begingroup%
	\edef\ndu@nextdelim{#1}%
	\edef\ndu@delim{}%
	\renewcommand*\do[1]{%
		\ndu@delim##1\edef\ndu@delim{\ndu@nextdelim}%
	}%
	\dolistloop{#2}%
	\endgroup%
}

\newcommand\nduFormatValue@helper[3]{%
	\ndu@if@segment@at@least{#1}{#2}{\IfValueT{#3}{\ifblank{#3}{}{\listadd{\tmp}{\nduFormatSegmentValue{#1}{#2}{#3}}}}}%
}

\newcommand\nduFormatValue@internal[6]{%
	% #1 = unit name
	% #2-6 = values
	\nduFormatValue@helper{#1}{0}{#2}%
	\nduFormatValue@helper{#1}{1}{#3}%
	\nduFormatValue@helper{#1}{2}{#4}%
	\nduFormatValue@helper{#1}{3}{#5}%
	\nduFormatValue@helper{#1}{4}{#6}%
	\ndu@helper@listjoin{\csuse{ndu@#1@unit@separator}}{\tmp}%
}

\NewDocumentCommand\nduFormatValue{ m O{} > { \SplitArgument { 4 } { . } } m }{%
	% #1 = unit name
	% #2 = options
	% #3 = values joined by .
	\begingroup%
	\nduset{#1/.cd,#2}%
	\nduFormatValue@internal{#1}#3%
	\endgroup%
	\ndu@if@summing{%
		\nduAddToSum@internal{#1}{\csuse{ndu@current@sum@name}}#3%
	}%
}

